[include]
  path = .gitconfig.local
[color]
	ui = true
  diff = true
[mergetool "diffmerge"]
	cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
	trustExitCode = false
[diff]
	tool = diffmerge
[merge]
	tool = diffmerge
[core]
  autocrlf = false
  safecrlf = false
  pager = less -q
[alias]
  s = status
  co = checkout
  cam = commit -am

