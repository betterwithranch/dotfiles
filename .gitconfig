[color]
	ui = true
  diff = true
[mergetool "diffmerge"]
  cmd = diffmerge --merge --result=\"`pwd`/$MERGED\" \"`pwd`/$LOCAL\" \"`pwd`/$BASE\" \"`pwd`/$REMOTE\"
	trustExitCode = false
[mergetool "vimdiff"]
  conflictstyle = diff3
[mergetool]
  keepBackup = false
[diff]
  #tool = diffmerge
  tool = vimdiff
[merge]
  #tool = diffmerge
  tool = vimdiff
[core]
  autocrlf = false
  safecrlf = false
  pager = less -q
[alias]
  s = status
  co = checkout
  cam = commit -am
[push]
	default = current
[user]
	email = craig@theisraels.net
	name = Craig Israel
[pager]
  branch = false
# Add local overrides to one of the following files
# For example, user.email
[include]
  path = ~/.gitconfig.local
  path = ~/.gitconfig_local
